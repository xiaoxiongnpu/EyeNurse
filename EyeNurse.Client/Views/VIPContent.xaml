<UserControl
    x:Class="EyeNurse.Client.Views.VIPContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EyeNurse.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="5"
    Padding="5"
    d:DesignHeight="450"
    d:DesignWidth="800"
    BorderBrush="Green"
    BorderThickness="2"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <TextBox IsReadOnly="True" TextAlignment="Center" x:Name="txt"></TextBox>
        <StackPanel HorizontalAlignment="Center" 
            Margin="5"
            Orientation="Horizontal">
            <Button
            Margin="2,0"
            HorizontalAlignment="Center"
            Click="BtnQQGroup_Click">
                一键加群
            </Button>
            <Button
            Margin="2,0"
            HorizontalAlignment="Center"
            Click="BtnCopy_Click">
                复制群号
            </Button>
        </StackPanel>

        <TextBlock Margin="0,10,0,0" TextAlignment="Center" Foreground="Green">感谢支持~~  愿圣光与你同在。</TextBlock>
        <Button
            Margin="5"
            HorizontalAlignment="Center"
            Click="BtnClose_Click">
            再会
        </Button>
    </StackPanel>
</UserControl>
