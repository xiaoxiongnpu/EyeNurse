<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:local="clr-namespace:EyeNurse.Client.Views"
    xmlns:tb="http://www.hardcodet.net/taskbar">

    <ContextMenu
        x:Key="ContextMenu"
        cal:Action.Target="ContextMenuViewModel"
        x:Shared="false">
        <MenuItem Header="关于">
            <MenuItem Header="官网" />
            <MenuItem Header="反馈" />
            <MenuItem Header="检查更新" />
            <MenuItem Header="分享" />
        </MenuItem>
        <MenuItem Command="{Binding HideWindowCommand}" Header="推迟" />
        <Separator />
        <MenuItem x:Name="ExitApp" Header="退出" />
        <TextBox x:Name="Desc" Text="{Binding Desc}" />
    </ContextMenu>

    <tb:TaskbarIcon
        x:Key="NotifyIcon"
        ContextMenu="{StaticResource ContextMenu}"
        ToolTipText="{Binding Desc}" />
</ResourceDictionary>