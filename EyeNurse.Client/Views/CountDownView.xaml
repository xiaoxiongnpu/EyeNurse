<Window
    x:Class="EyeNurse.Client.Views.CountDownView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EyeNurse.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CountDownView"
    Width="60"
    Height="20"
    MinWidth="0"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    AllowsTransparency="True"
    BorderThickness="0"
    ContextMenu="{StaticResource ContextMenu}"
    Left="{Binding PositionLeft, Mode=TwoWay}"
    Opacity="0.9"
    ShowInTaskbar="False"
    Top="{Binding PositionTop, Mode=TwoWay}"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources />
    <Grid ContextMenu="{StaticResource ContextMenu}">
        <ProgressBar Maximum="100" Value="{Binding Services.CountdownPercent, FallbackValue=100}" />
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Services.Countdown, StringFormat=mm\\:ss}" />
    </Grid>
</Window>
