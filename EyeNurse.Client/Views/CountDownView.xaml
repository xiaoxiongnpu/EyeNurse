<Window
    x:Class="EyeNurse.Client.Views.CountDownView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EyeNurse.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CountDownView"
    Width="148"
    Height="56"
    MinWidth="0"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    AllowsTransparency="True"
    BorderThickness="0"
    Left="{Binding PositionLeft, Mode=TwoWay}"
    Opacity="0.9"
    Top="{Binding PositionTop, Mode=TwoWay}"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <ProgressBar Value="{Binding Services.CountdownPercent}" Maximum="100"/>
        <TextBlock Text="{Binding Services.Countdown}" />
    </Grid>
</Window>
